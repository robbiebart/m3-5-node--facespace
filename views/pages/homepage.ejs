<%- include( '../partials/header') %>
<div class="homepage">
    <h2>All Facespace members </h2>
</div>
<ul class="homepage__all">
    <% users.forEach(user => { %>
    <li class="homepage__all--user">
        <% if (currentUser.name === undefined || currentUser.friends.includes(user._id) === false) { %>
            <a href=/users/<%=user._id%>><img src="<%= user.avatarUrl %>" /></a>
        <% }  else  { %>
            <span class="ribbon">Friend</span><a href=/users/<%=user._id%>><img src="<%= user.avatarUrl %>" /></a>
        <% } %>
    </li>
    <% }) %>
  </ul>

<%- include( '../partials/footer') %>

